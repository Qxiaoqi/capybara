{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1421",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CapyAssist",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "scope": ["**", "$CACHE/**", "$CONFIG/**", "$APPCACHE/**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**", "$CACHE/**", "$CONFIG/**", "$APPCACHE/**"]
      }
    },
    "windows": [
      {
        "title": "Capybara",
        "resizable": false,
        "width": 350,
        "height": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.apps.capybara",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*"]
    }
  }
}
